<h1>つぶやき一覧</h1>

<table>
 <tr>
  <th>つぶやき内容</th>
 </tr>
<% @post.each do |post| %>
  <tr>
   <td><%= post.content %></td>
   <td><%= link_to '投稿確認', post_path(post.id) %></td>
   <td><%= link_to 'つぶやきを編集する', edit_post_path(post.id) %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しくつぶやきを投稿する', new_post_path %>